<section id="admin.config.antispam">
	<title>Anti-Spam Configuration</title>

	<variablelist>
		<varlistentry>
			<term>$g_antispam_max_event_count</term>
			<listitem>
				<para>
					Max number of events to allow for users with default access level
					(see <emphasis>$g_default_new_account_access_level</emphasis>
					in <xref linkend="admin.config.defaults" />)
					when signup is enabled.
				</para>
				<para>Use 0 for no limit.  Default is 10.
				</para>
			</listitem>
		</varlistentry>
		<varlistentry>
			<term>$g_antispam_time_window_in_seconds</term>
			<listitem>
				<para>Time window to enforce max events within.
					Default is 3600 seconds (1 hour).
				</para>
			</listitem>
		</varlistentry>
	</variablelist>
</section>
